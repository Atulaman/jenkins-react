pipeline {
    agent any
    stages {
        stage('first'){
            steps {
                echo "hello duniya!"
            }
        }
        stage('second'){
            steps {
                input "do you want to proceed?"
            }
        }
        stage('three'){
            when {
                not {
                    branch "main"
                }
            }
            steps {
                echo "kaise ho?"
            }
        }
        stage('four'){
            parallel {
                stage('unit test') {
                    steps{
                        echo "running unit testing...."
                    }
                }
                stage('integration testing') {
                    agent{
                        docker{
                            reuseNode false
                            image "ubuntu"
                        }
                    }
                    steps{
                        echo "running integration testing"
                    }
                }
            }
        }
        stage('five'){
            steps{
                sh '''
                    #!bin/bash
                    docker-compose down -v
                    docker-compose up -d
                    docker build -t atulaman/jenkins-react:latest .
                    docker login -u atulaman -p ${params.DOCKER_PASS}
                    docker push atulaman/jenkins-react:latest
                '''
            }
        }
    }
}