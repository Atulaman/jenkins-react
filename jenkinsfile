pipeline {
    agent any
    stages {
        stage('first'){
            steps {
                echo "hello duniya!"
            }
        }
        stage('second'){
            steps {
                input "do you want to proceed?"
            }
        }
        stage('three'){
            when {
                not {
                    branch "main"
                }
            }
            steps {
                echo "kaise ho?"
            }
        }
        stage('four'){
            parallel {
                stage('unit test') {
                    steps{
                        echo "running unit testing...."
                    }
                }
                stage('integration testing') {
                    agent{
                        docker{
                            reuseNode false
                            image "ubuntu"
                            sh '''
                                docker-compose up -d
                            '''
                        }
                    }
                    steps{
                        echo "running integration testing"
                    }
                }
            }
        }
    }
}